<% content_for(:title) { "Save Button - Save Notes & Bookmarks" } %>

<div class="hero">
  <div class="hero-content">
    <h1 class="hero-title">
      Save stuff.<br>
      <span class="highlight">Find it later.</span>
    </h1>
    <p class="hero-subtitle">
      Save Button is a private, append-only, open source, local-first,
      file-based bookmark & breadcrumb tool with apps for
      every platform we can think of.
    </p>
    <div class="hero-cta">
      <%= link_to "Learn More", "#features", class: "btn btn-secondary btn-large" %>
      <%= link_to "Get The Apps", "#apps", class: "btn btn-primary btn-large" %>
    </div>
  </div>

  <div class="hero-visual">
    <div class="cards-preview">
      <div class="preview-card bookmark-card">
        <div class="card-icon">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M19 21l-7-5-7 5V5a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2z"></path>
          </svg>
        </div>
        <span class="card-label">Bookmarks</span>
        <p class="card-desc">All your favourite yeaurls</p>
      </div>
      <div class="preview-card note-card">
        <div class="card-icon">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M15.5 3H5a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V8.5L15.5 3Z"></path>
            <path d="M15 3v6h6"></path>
          </svg>
        </div>
        <span class="card-label">Notes</span>
        <p class="card-desc">Passing thoughts and fieldstones</p>
      </div>
      <div class="preview-card document-card">
        <div class="card-icon">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
            <polyline points="14 2 14 8 20 8"></polyline>
            <rect x="8" y="12" width="8" height="2" rx="0.5" fill="currentColor" stroke="none"></rect>
            <rect x="8" y="16" width="5" height="2" rx="0.5" fill="currentColor" stroke="none"></rect>
          </svg>
        </div>
        <span class="card-label">Documents</span>
        <p class="card-desc">PDFs, Office docs, and junk for work</p>
      </div>
      <div class="preview-card image-card">
        <div class="card-icon">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
            <circle cx="8.5" cy="8.5" r="1.5" fill="currentColor" stroke="none"></circle>
            <polyline points="21 15 16 10 5 21"></polyline>
          </svg>
        </div>
        <span class="card-label">Images</span>
        <p class="card-desc">Screenshots, photos, and dank memes</p>
      </div>
    </div>
  </div>
</div>

<section id="features" class="features-section">
  <div class="features-container">
    <h2 class="section-title">Stupidly Simple</h2>
    <div class="features-grid">
      <div class="feature">
        <div class="feature-icon blue">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="11" cy="11" r="8"></circle>
            <path d="m21 21-4.35-4.35"></path>
          </svg>
        </div>
        <h3>Find anything</h3>
        <p>Search inside your notes, bookmarks, and documents from every app.</p>
      </div>
      <div class="feature">
        <div class="feature-icon green">
            <svg width="32" height="32" viewBox="0 0 20 20" fill="none" stroke="currentColor" stroke-width="1.3" xmlns="http://www.w3.org/2000/svg">
                <path d="M14.195 9.77792C14.7042 10.5612 15 11.4958 15 12.5C15 15.2612 12.7612 17.5 10 17.5C7.23875 17.5 5 15.2612 5 12.5C5 9.73875 7.23875 7.5 10 7.5C11.0037 7.5 11.9388 7.79583 12.7221 8.305"/>
                <path d="M16.9729 7.23291C17.3129 8.08916 17.5 9.02291 17.5 10.0004C17.5 14.1425 14.1421 17.5004 10 17.5004C5.85792 17.5004 2.5 14.1425 2.5 10.0004C2.5 9.02291 2.68708 8.08916 3.02708 7.23291"/>
                <path d="M11.248 2.60352C13.0064 2.8981 14.5576 3.80435 15.6747 5.09602"/>
                <path d="M4.32617 5.09609C5.44326 3.80484 6.99326 2.899 8.75076 2.604"/>
                <path d="M4.81445 7.31396L9.31445 11.814"/>
                <path d="M15.1855 7.31381L15.6739 5.0959L17.4605 5.01465L16.9722 7.23257L15.1855 7.31381Z M4.81406 7.31381L4.32573 5.0959L2.53906 5.01465L3.0274 7.23257L4.81406 7.31381Z M15.1858 7.31396L14.3379 8.16188"/>
                <path d="M10 4.1665V11.4976"/>
                <path d="M10 4.16674L8.75 2.60383L10 1.11133L11.25 2.60383L10 4.16674Z M12.5371 9.96204L12.7213 8.30454L14.3375 8.16162L14.1946 9.77787L12.5371 9.96204Z M9.99854 13.5024C10.5522 13.5024 11.001 13.0536 11.001 12.5C11.001 11.9464 10.5522 11.4976 9.99854 11.4976C9.4449 11.4976 8.99609 11.9464 8.99609 12.5C8.99609 13.0536 9.4449 13.5024 9.99854 13.5024Z" fill="#000"/>
            </svg>
        </div>
        <h3>Local-First</h3>
        <p>Save Button is always available offline. Sync between devices.</p>
      </div>
      <div class="feature">
        <div class="feature-icon purple">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94"></path>
            <path d="M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19"></path>
            <path d="M14.12 14.12a3 3 0 1 1-4.24-4.24"></path>
            <line x1="1" y1="1" x2="23" y2="23"></line>
          </svg>
        </div>
        <h3>Private</h3>
        <p>Your data belongs to you. <br>No ads, no social features.</p>
      </div>
    </div>
  </div>
</section>

<section id="apps" class="apps-section">
  <div class="apps-container">
    <h2 class="section-title">Get The Apps</h2>

    <div class="apps-content">
      <div class="apps-subsection">
        <h3 class="apps-subtitle">Mobile Apps</h3>
        <p class="apps-description">Available for iPhone, iPad, Android phones, and Android tablets.</p>
        <div class="store-buttons">
          <a href="https://apps.apple.com/app/save-button-app/id6758891680" class="store-button" target="_blank" rel="noopener noreferrer">
            <img src="/icons/platforms/app-store.svg" alt="Download on the App Store" class="store-badge">
          </a>
          <a href="https://play.google.com/store/apps/details?id=org.savebutton.app" class="store-button" target="_blank" rel="noopener noreferrer">
            <img src="/icons/platforms/play-store.png" alt="Get it on Google Play" class="store-badge">
            <span class="platform-status">(Requires Beta Invite)</span>
          </a>
        </div>
      </div>

      <div class="apps-subsection">
        <h3 class="apps-subtitle">Browser Extensions</h3>
        <p class="apps-description">Save Button works on most browsers. If your browser is not listed, try installing from the Chromium link.</p>
        <div class="browser-grid">
          <a href="https://chromewebstore.google.com/detail/save-button/eeoleaffndkjkgbdhaojcgehcklfihid" class="browser-item" target="_blank" rel="noopener noreferrer">
            <img src="/icons/browsers/chrome.png" alt="Chrome" class="browser-icon">
            <span class="browser-name">Chrome</span>
          </a>
          <a href="https://addons.mozilla.org/en-US/firefox/addon/save-button/" class="browser-item" target="_blank" rel="noopener noreferrer">
            <img src="/icons/browsers/firefox.png" alt="Firefox" class="browser-icon">
            <span class="browser-name">Firefox</span>
          </a>
          <a href="https://microsoftedge.microsoft.com/addons/detail/save-button/ldcpchibphbafmclockfeoiffafjdekj" class="browser-item" target="_blank" rel="noopener noreferrer">
            <img src="/icons/browsers/edge.png" alt="Edge" class="browser-icon">
            <span class="browser-name">Edge</span>
          </a>
          <a href="https://apps.apple.com/app/save-button-for-safari/id6759535767" class="browser-item" target="_blank" rel="noopener noreferrer">
            <img src="/icons/browsers/safari.png" alt="Safari" class="browser-icon">
            <span class="browser-name">Safari</span>
          </a>
          <a href="https://chromewebstore.google.com/detail/save-button/eeoleaffndkjkgbdhaojcgehcklfihid" class="browser-item" target="_blank" rel="noopener noreferrer">
            <img src="/icons/browsers/chromium.png" alt="Chromium" class="browser-icon">
            <span class="browser-name">Chromium</span>
          </a>
          <a href="https://chromewebstore.google.com/detail/save-button/eeoleaffndkjkgbdhaojcgehcklfihid" class="browser-item" target="_blank" rel="noopener noreferrer">
            <img src="/icons/browsers/vivaldi.png" alt="Vivaldi" class="browser-icon">
            <span class="browser-name">Vivaldi</span>
          </a>
          <a href="https://chromewebstore.google.com/detail/save-button/eeoleaffndkjkgbdhaojcgehcklfihid" class="browser-item" target="_blank" rel="noopener noreferrer">
            <img src="/icons/browsers/brave.png" alt="Brave" class="browser-icon">
            <span class="browser-name">Brave</span>
          </a>
          <a href="https://chromewebstore.google.com/detail/save-button/eeoleaffndkjkgbdhaojcgehcklfihid" class="browser-item" target="_blank" rel="noopener noreferrer">
            <img src="/icons/browsers/arc.png" alt="Arc" class="browser-icon">
            <span class="browser-name">Arc</span>
          </a>
        </div>
      </div>

      <div class="apps-subsection">
        <h3 class="apps-subtitle">Desktop Apps</h3>
        <div class="platform-list">
          <div class="platform-item">
            <img src="/icons/platforms/windows.png" alt="Windows" class="platform-icon">
            <div class="platform-info">
              <span class="platform-name">Windows</span>
              <span class="platform-status">(Coming Soon)</span>
            </div>
          </div>
          <div class="platform-item">
            <img src="/icons/platforms/macos.png" alt="macOS" class="platform-icon">
            <div class="platform-info">
              <span class="platform-name">macOS</span>
              <span class="platform-status">(Coming Soon)</span>
            </div>
          </div>
          <div class="platform-item">
            <img src="/icons/platforms/linux.png" alt="Linux" class="platform-icon">
            <div class="platform-info">
              <span class="platform-name">Linux</span>
              <span class="platform-status">(Coming Soon)</span>
            </div>
          </div>
        </div>
      </div>

      <div class="apps-subsection">
        <h3 class="apps-subtitle">Server</h3>
        <p class="apps-description">Grab an account with savebutton.com or, if you're a big nerd, host the backup service yourself.</p>
        <div class="server-options">
          <div class="server-option">
            <a href="<%= new_registration_path %>" class="server-option-link">
              <div class="server-icon">
                <img src="/icons/save-button.svg" alt="Save Button" class="server-option-icon">
              </div>
              <%= link_to "Sign Up", new_registration_path, class: "btn btn-primary" %>
            </a>
          </div>
          <div class="server-divider">- or -</div>
          <div class="server-option">
            <a href="https://github.com/deobald/kaya-server/" class="server-option-link" target="_blank" rel="noopener noreferrer">
              <div class="server-icon">
                <img src="/icons/kaya.svg" alt="Kaya" class="server-option-icon">
              </div>
              <%= link_to "Self-Host", "https://github.com/deobald/kaya-server/", class: "btn btn-secondary", target: "_blank", rel: "noopener noreferrer" %>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
