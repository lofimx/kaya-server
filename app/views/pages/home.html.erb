<% content_for(:title) { "Save Button - Save Notes & Bookmarks" } %>

<div class="hero">
  <div class="hero-content">
    <h1 class="hero-title">
      Save everything.<br>
      <span class="highlight">Find it instantly.</span>
    </h1>
    <p class="hero-subtitle">
      Your personal space for notes and bookmarks. Capture ideas, save links, and never lose track of what matters.
    </p>
    <div class="hero-cta">
      <%= link_to "Get Started", new_registration_path, class: "btn btn-primary btn-large" %>
      <%= link_to "Learn More", "#features", class: "btn btn-secondary btn-large" %>
    </div>
  </div>

  <div class="hero-visual">
    <div class="cards-preview">
      <div class="preview-card note-card">
        <div class="card-icon">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
            <polyline points="14 2 14 8 20 8"></polyline>
            <line x1="16" y1="13" x2="8" y2="13"></line>
            <line x1="16" y1="17" x2="8" y2="17"></line>
            <polyline points="10 9 9 9 8 9"></polyline>
          </svg>
        </div>
        <span class="card-label">Notes</span>
        <p class="card-desc">Quick thoughts, meeting notes, ideas that spark</p>
      </div>
      <div class="preview-card bookmark-card">
        <div class="card-icon">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M19 21l-7-5-7 5V5a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2z"></path>
          </svg>
        </div>
        <span class="card-label">Bookmarks</span>
        <p class="card-desc">Articles, tools, resources to revisit later</p>
      </div>
    </div>
  </div>
</div>

<section id="features" class="features-section">
  <div class="features-container">
    <h2 class="section-title">Simple by design</h2>
    <div class="features-grid">
      <div class="feature">
        <div class="feature-icon blue">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="11" cy="11" r="8"></circle>
            <path d="m21 21-4.35-4.35"></path>
          </svg>
        </div>
        <h3>Find anything</h3>
        <p>Search through all your notes and bookmarks instantly. Your information, always at your fingertips.</p>
      </div>
      <div class="feature">
        <div class="feature-icon green">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M12 2v20M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path>
          </svg>
        </div>
        <h3>Free to start</h3>
        <p>Get started for free. No credit card required. Upgrade when you need more.</p>
      </div>
      <div class="feature">
        <div class="feature-icon purple">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
            <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
          </svg>
        </div>
        <h3>Private & secure</h3>
        <p>Your data belongs to you. We don't sell your information or show you ads.</p>
      </div>
    </div>
  </div>
</section>
