<header class="site-header">
  <div class="header-container">
    <div class="logo">
      <div class="hamburger-menu" data-controller="hamburger">
        <button class="hamburger-button" data-action="click->hamburger#toggle" aria-label="Menu">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <line x1="3" y1="6" x2="21" y2="6"></line>
            <line x1="3" y1="12" x2="21" y2="12"></line>
            <line x1="3" y1="18" x2="21" y2="18"></line>
          </svg>
        </button>
        <nav class="hamburger-dropdown" data-hamburger-target="dropdown">
          <%= link_to app_everything_path, class: "hamburger-item #{'active' if current_page?(app_everything_path)}" do %>
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="3" y="3" width="7" height="7"></rect>
              <rect x="14" y="3" width="7" height="7"></rect>
              <rect x="14" y="14" width="7" height="7"></rect>
              <rect x="3" y="14" width="7" height="7"></rect>
            </svg>
            <span>Everything</span>
          <% end %>
        </nav>
      </div>
    </div>

    <nav class="nav-links">
      <%= button_to "Log Out", session_path, method: :delete, class: "btn btn-secondary" %>
      <%= link_to account_path, class: "profile-link", title: "Account" do %>
        <% if Current.user.avatar.attached? %>
          <%= image_tag Current.user.avatar, class: "profile-avatar profile-avatar-image" %>
        <% else %>
          <div class="profile-avatar">
            <%= Current.user.email_address[0].upcase %>
          </div>
        <% end %>
      <% end %>
    </nav>
  </div>
</header>
