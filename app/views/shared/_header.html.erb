<header class="site-header">
  <div class="header-container">
    <div class="logo">
      <%= link_to root_path, class: "logo-link" do %>
        <%= render "shared/logo_icon", size: 28, id_suffix: "header" %>
        <span class="logo-text">kaya</span>
      <% end %>
    </div>

    <nav class="nav-links">
      <% if authenticated? %>
        <span class="nav-greeting">Hello, <%= Current.user.email_address.split('@').first %></span>
        <%= button_to "Log Out", session_path, method: :delete, class: "btn btn-secondary" %>
      <% else %>
        <%= link_to "Log In", new_session_path, class: "btn btn-secondary" %>
        <%= link_to "Sign Up", new_registration_path, class: "btn btn-primary" %>
      <% end %>
    </nav>
  </div>
</header>
