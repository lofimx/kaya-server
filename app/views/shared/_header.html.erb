<header class="site-header">
  <div class="header-container">
    <div class="logo">
      <%= link_to root_path, class: "logo-link" do %>
        <%= render "shared/logo_icon", size: 28, id_suffix: "header" %>
        <span class="logo-text">Save Button</span>
      <% end %>
    </div>

    <nav class="nav-links">
      <% if authenticated? %>
        <%= button_to "Log Out", session_path, method: :delete, class: "btn btn-secondary" %>
        <%= link_to account_path, class: "profile-link", title: "Account" do %>
          <% if Current.user.avatar.attached? %>
            <%= image_tag Current.user.avatar, class: "profile-avatar profile-avatar-image" %>
          <% else %>
            <div class="profile-avatar">
              <%= Current.user.email_address[0].upcase %>
            </div>
          <% end %>
        <% end %>
      <% else %>
        <%= link_to "Log In", new_session_path, class: "btn btn-secondary" %>
        <%= link_to "Sign Up", new_registration_path, class: "btn btn-primary" %>
      <% end %>
    </nav>
  </div>
</header>
