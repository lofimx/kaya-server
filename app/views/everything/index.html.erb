<% content_for :app_layout, true %>

<div class="everything-container">
  <div class="search-container">
    <%= form_with url: app_everything_path, method: :get, local: true, class: "search-form", data: { controller: "search", turbo_frame: "_top" } do |f| %>
      <input type="search"
             name="q"
             value="<%= params[:q] %>"
             placeholder="Search your files..."
             class="search-input"
             data-search-target="input"
             data-action="input->search#search">
    <% end %>
  </div>

  <div class="anga-grid">
    <% @angas.each do |anga| %>
      <div class="anga-tile">
        <% ext = File.extname(anga.filename).downcase %>
        <% if ext == ".md" %>
          <div class="anga-tile-content anga-tile-note">
            <% if anga.file.attached? %>
              <div class="note-preview"><%= anga.file.download.force_encoding('UTF-8').truncate(500) %></div>
            <% end %>
          </div>
        <% elsif ext == ".url" %>
          <div class="anga-tile-content anga-tile-bookmark">
            <%= render "shared/icons/bookmark_icon" %>
          </div>
        <% elsif ext.in?(%w[.png .gif .jpg .jpeg .webp .svg .bmp .ico]) %>
          <div class="anga-tile-content anga-tile-image">
            <%= image_tag url_for(anga.file), alt: anga.filename %>
          </div>
        <% elsif ext == ".pdf" %>
          <div class="anga-tile-content anga-tile-pdf">
            <%= render "shared/icons/pdf_icon" %>
          </div>
        <% else %>
          <div class="anga-tile-content anga-tile-file">
            <div class="file-extension"><%= ext.delete('.').upcase %></div>
          </div>
        <% end %>
        <div class="anga-tile-filename"><%= anga.filename %></div>
      </div>
    <% end %>
  </div>

  <% if @angas.empty? %>
    <div class="empty-state">
      <p>No files yet. Start adding notes and bookmarks!</p>
    </div>
  <% end %>
</div>
